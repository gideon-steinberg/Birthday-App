!!!
%html
  %head
    - unless @person
      %title A Birthday Website
    - else
      %title 
        = "A Page for #{@person}"
    %script{:src => "/vendor/jquery/jquery-2.0.3.min.js", :type => "text/javascript"}
    %script{:src => "/vendor/bootstrap/js/bootstrap.min.js", :type => "text/javascript"}
    %link{:href => "/vendor/bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "/vendor/fontawesome/css/font-awesome.min.css", :rel => "stylesheet"}/
    
  %body
    %ul.breadcrumb
      %li
        %a{:href => "/"}
          Home
      %li
        %a{:href => "/person/Jeremy"}
          Jeremy
      %li
        %a{:href => "/person/Barry"}
          Barry
      %li
        %a{:href => "/stocks/price"}
          Stocks
      %li
        %a{:href => "/games/index"}
          Games
      %li
        %a{:href => "/fact/show"}
          Facts
    = yield 

